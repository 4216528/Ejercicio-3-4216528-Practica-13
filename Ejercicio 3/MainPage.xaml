<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="Ejercicio_3.MainPage">

    <!-- Creamos un Grid y estblecemos el ancho con la propiedad WidthRequest y con la funcion Auto la adaptación automatica de la columna dependiendo lo que esta contenga -->
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="100" />
            
            <ColumnDefinition Width="Auto" />
            
            <ColumnDefinition />
            
        </Grid.ColumnDefinitions>

        <BoxView Color="Blue" />
        
        <BoxView Color="Gray" 
                 
        Grid.Column="1" WidthRequest="300" />
        
        <BoxView Color="Green" Grid.Column="2" />
        
    </Grid>

</ContentPage>
